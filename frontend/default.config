server {
    listen 80;
    index index.html;
    server_name localhost;
    error_log  /var/log/nginx/error.log;
    
    root /usr/share/nginx/html;
    set $backend_url http:://$BACKEND:8080;
    location /api {
        proxy_pass $backend_url/api;
    }
    location /management {
        proxy_pass $backend_url/management;
    }
    location /swagger-resources {
        proxy_pass $backend_url/swagger-resources;
    }
    location /v2 {
       proxy_pass $backend_url/v2;
    }
    location /auth {
       proxy_pass $backend_url/auth;
    }

    location / {
        try_files $uri $uri/ /index.html;
    }
}
